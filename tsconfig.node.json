{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "allowJs": true,
    "noImplicitAny": false,
    "strict": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,  // Disable strict checking for property initialization
    "strictBindCallApply": false,           // Disable strict checking of bind, call, and apply methods
    "noImplicitReturns": false,             // Allow functions to end without returning
    "noFallthroughCasesInSwitch": false, 
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
