{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "noImplicitAny": false,
    "strict": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,  // Disable strict checking for property initialization
    "strictBindCallApply": false,           // Disable strict checking of bind, call, and apply methods
    "noImplicitReturns": false,             // Allow functions to end without returning
    "noFallthroughCasesInSwitch": false,  
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
